<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:id="@+id/drawer" >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myProfile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/profile"
            android:drawablePadding="8dp"
            android:text="My Profile"
            android:textColor="@color/textColor"
            android:paddingLeft="50dp"
            android:paddingRight="60dp"
            android:gravity="left"
            android:paddingStart="100dp"
            android:textSize="28sp"
            android:textStyle="bold"
            app:drawableTint="@color/textColor"
            app:fontFamily="@font/amaranth" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--Account summary container-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#00416A"
                    android:foregroundGravity="center|top"
                    app:cardBackgroundColor="#E6FFFFFF"
                    app:cardCornerRadius="20dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/acme"
                            android:gravity="left"
                            android:text="Account Holder Details"
                            android:textColor="@color/itemColor"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Name : "
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:textColor="@color/itemColor"
                                android:layout_marginTop="20dp" />

                            <!-- detail view -->
                            <TextView
                                android:id="@+id/profile_name_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mr. Isuru Sathsara"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:textColor="@color/itemColor"
                                android:layout_marginTop="20dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Address : "
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:textColor="@color/itemColor"
                                android:layout_marginTop="20dp" />

                            <!-- detail view -->
                            <TextView
                                android:id="@+id/profile_address_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lake Rd, Kurunegala"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:textColor="@color/itemColor"
                                android:layout_marginTop="20dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NIC : "
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:textColor="@color/itemColor"
                                android:layout_marginTop="20dp" />

                            <!-- detail view -->
                            <TextView
                                android:id="@+id/profile_nic_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="972562548 V"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:textColor="@color/itemColor"
                                android:layout_marginTop="20dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Contact : "
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:textColor="@color/itemColor"
                                android:layout_marginTop="20dp" />

                            <!-- detail view -->
                            <TextView
                                android:id="@+id/profile_contact_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="769152716"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:textColor="@color/itemColor"
                                android:layout_marginTop="20dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email : "
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:textColor="@color/itemColor"
                                android:layout_marginTop="20dp" />

                            <!-- detail view -->
                            <TextView
                                android:id="@+id/profile_email_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="isuru.s@gmail.com"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:textColor="@color/itemColor"
                                android:layout_marginTop="20dp" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/transactio_history_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/ic_credit_card_black_24dp"
                    android:drawablePadding="8dp"
                    android:text="Transaction History"
                    android:textColor="@color/textColor"
                    android:paddingLeft="50dp"
                    android:paddingRight="60dp"
                    android:gravity="left"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/textColor"
                    app:fontFamily="@font/amaranth" />


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- EACH CARD FOR EACH HISTORY DETAIL -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="#00416A"
                            android:elevation="10dp"
                            android:foregroundGravity="center"
                            app:cardBackgroundColor="#EDFFFFFF"
                            app:cardCornerRadius="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.482"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.853" >

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/c1"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:gravity="center"
                                    android:text="2020-05-20 | I Sathsara - 0321 4584 4554 7884 | Rs.500"
                                    android:textColor="@color/itemColor"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="#00416A"
                            android:elevation="10dp"
                            android:foregroundGravity="center"
                            app:cardBackgroundColor="#EDFFFFFF"
                            app:cardCornerRadius="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.482"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.853" >

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/c2"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:gravity="center"
                                    android:text="2020-05-20 | I Sathsara - 0854123654 | Rs.1500"
                                    android:textColor="@color/itemColor"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="#00416A"
                            android:elevation="10dp"
                            android:foregroundGravity="center"
                            app:cardBackgroundColor="#EDFFFFFF"
                            app:cardCornerRadius="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.482"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.853" >

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/c3"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:gravity="center"
                                    android:text="2020-05-20 | I Sathsara - 2532644564 | Rs.200"
                                    android:textColor="@color/itemColor"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>





            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!---side drawer-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawerNavigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginEnd="50dp"
        android:background="@drawable/drawer_back_gradient"
        app:theme="@style/NavigationViewStyle"
        app:itemIconTint="@drawable/navigation_view_icon_tint_selector"
        app:itemTextColor="@drawable/navigation_view_text_selector"
        android:layout_marginRight="131dp"
        app:headerLayout="@layout/drawer_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:itemIconSize = "30sp"
        app:menu="@menu/menu_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>