<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:itemBackground">@color/itemColor</item>
        <item name="android:itemTextAppearance">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">21sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">65dp</item><!-- menu item height-->
        <item name="android:fontFamily">@font/amaranth</item>
        <item name="android:colorLongPressedHighlight">@color/colorPrimary</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>
